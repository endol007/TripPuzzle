<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/travelGreen"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/travelgo_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  트레벨 고 시험 첫 페이지"
            android:textColor="#000069"
            android:textSize="15dp" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="170dp"
        android:text="아이디"
        android:textColor="#000069"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/travelid"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="195dp"
        android:background="#00ffffff" />

    <ImageView
        android:layout_width="296dp"
        android:layout_height="2dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/line_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="300dp"
        android:text="비밀번호"
        android:textColor="#000069"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="325dp"
        android:background="#00ffffff" />

    <ImageView
        android:layout_width="296dp"
        android:layout_height="2dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/line_login" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="400dp"
            android:layout_marginRight="50dp"
            android:background="#00ffffff"
            android:text="로그인"
            android:textColor="#000069"
            android:textSize="20sp" />

        <Button
            android:id="@+id/findidbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:background="#00ffffff"
            android:text="회원정보 찾기"
            android:textColor="#000069"
            android:textSize="20sp" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="400dp"
            android:background="#00ffffff"
            android:text="회원가입"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />


        <TextView
            android:id="@+id/txt_login_err"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:text=" *아이디와 일치하는 비밀번호가 아닙니다"
            android:textColor="#fb3a2f"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/txt_login_err_noinput"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:text=" *아이디와 비밀번호를 모두 입력해주세요"
            android:textColor="#fb3a2f"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>

</RelativeLayout>