<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/travelGreen"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/travelgo_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  트레벨 고 시험 첫 페이지"
            android:textColor="#000069"
            android:textSize="15dp" />
    </LinearLayout>



    <EditText
        android:id="@+id/travelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="195dp"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="296dp"
        android:layout_height="2dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="230dp"
        android:src="@drawable/line_login" />




    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:hint="비밀번호"
        android:layout_marginTop="325dp"
        android:inputType="textPassword"
        android:text=""
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="296dp"
        android:layout_height="2dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/line_login" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="400dp"
            android:layout_marginRight="50dp"
            android:background="#00ffffff"
            android:text="로그인"
            android:textColor="#000069"
            android:textSize="20sp" />

        <Button
            android:id="@+id/findidbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:background="#00ffffff"
            android:text="회원정보 찾기"
            android:textColor="#000069"
            android:textSize="20sp" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="400dp"
            android:background="#00ffffff"
            android:text="회원가입"
            android:textColor="#000069"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_login_err"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:text=" *아이디와 일치하는 비밀번호가 아닙니다"
            android:textColor="#fb3a2f"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/txt_login_err_noinput"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:text=" *아이디와 비밀번호를 모두 입력해주세요"
            android:textColor="#fb3a2f"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_facebook_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="57dp"
            android:visibility="gone" />



        <Button
            android:id="@+id/btn_custom_login"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="57dp"
            android:background="@drawable/fb_icon" />


        <TextView
            android:id="@+id/tvLoginTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/tvLoginTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/kakaoLoginButton2"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/kakaologin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLoginTitle2" />


    </RelativeLayout>

</RelativeLayout>