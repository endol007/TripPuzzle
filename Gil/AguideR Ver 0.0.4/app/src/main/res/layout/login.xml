<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/travelGreen"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/aguider_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  A-guideR 0.0.5"
            android:textColor="#000069"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/travelid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="180dp"
            android:hint="아이디"
            android:inputType="textPersonName"
            android:ems="12"
            android:text=""
            android:textSize="20dp"/>


        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:hint="비밀번호"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:ems="12"
            android:text=""
            android:textSize="20dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registerbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="#00ffffff"
                android:text="회원가입"
                android:textColor="#000069"
                android:textSize="20sp" />

            <Button
                android:id="@+id/findidbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="#00ffffff"
                android:text="계정찾기"
                android:textColor="#000069"
                android:textSize="20sp" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:background="#00ffffff"
                android:text="로그인"
                android:textColor="#000069"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">




            <TextView
                android:id="@+id/txt_login_err"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:text=" *아이디와 일치하는 비밀번호가 아닙니다"
                android:textColor="#fb3a2f"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/txt_login_err_noinput"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:text=" *아이디와 비밀번호를 모두 입력해주세요"
                android:textColor="#fb3a2f"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/btn_facebook_login"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                />



            <Button
                android:id="@+id/btn_custom_login"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/facebook_icon" />


            <Button
                android:id="@+id/kakaoLoginButton2"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/kakao_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLoginTitle2" />






        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/loginokbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="50dp"
                android:background="#00ffffff"
                android:text="로그인 성공"
                android:textColor="#000069"
                android:textSize="20sp" />


            <Button
                android:id="@+id/jspregisterbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="#00ffffff"
                android:text="JSP회원가입"
                android:textColor="#000069"
                android:textSize="20sp" />



            <Button
                android:id="@+id/gpstestbtn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:background="#00ffffff"
                android:text="GPS 시험"
                android:textColor="#000069"
                android:textSize="20sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvLoginTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/tvLoginTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </LinearLayout>






</RelativeLayout>